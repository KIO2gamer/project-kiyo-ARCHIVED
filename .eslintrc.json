{
    "env": {
        "browser": false,
        "node": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "commonjs"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "no-console": "off",
        "prefer-const": "error",
        "no-var": "error"
    },
    "ignorePatterns": [
        "node_modules/",
        "logs/",
        "*.min.js"
    ]
}

