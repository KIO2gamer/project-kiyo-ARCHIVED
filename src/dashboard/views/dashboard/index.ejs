<div class="space-y-6">
    <div class="bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-3xl font-bold mb-4">Your Servers</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (guilds && guilds.length > 0) { %>
                <% guilds.forEach(guild => { %>
                    <div class="bg-gray-50 rounded-lg p-6 hover:shadow-md transition-shadow">
                        <div class="flex items-center space-x-4">
                            <% if (guild.icon) { %>
                                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" 
                                     alt="<%= guild.name %>"
                                     class="w-16 h-16 rounded-full">
                            <% } else { %>
                                <div class="w-16 h-16 rounded-full bg-gray-300 flex items-center justify-center">
                                    <span class="text-2xl font-bold text-gray-600">
                                        <%= guild.name.charAt(0) %>
                                    </span>
                                </div>
                            <% } %>
                            <div>
                                <h3 class="text-xl font-semibold"><%= guild.name %></h3>
                                <p class="text-gray-600 text-sm">ID: <%= guild.id %></p>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a href="/dashboard/guild/<%= guild.id %>" 
                               class="block w-full text-center bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition-colors">
                                Manage Server
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-span-full text-center py-8">
                    <p class="text-gray-600">You don't have access to any servers yet.</p>
                    <a href="https://discord.com/oauth2/authorize?client_id=<%= process.env.DISCORD_CLIENT_ID %>&scope=bot&permissions=8" 
                       class="inline-block mt-4 bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 transition-colors">
                        Add Bot to Server
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="https://discord.com/oauth2/authorize?client_id=<%= process.env.DISCORD_CLIENT_ID %>&scope=bot&permissions=8" 
               class="block p-4 bg-green-100 rounded-lg hover:bg-green-200 transition-colors">
                <h3 class="font-semibold text-green-800">Add to Server</h3>
                <p class="text-green-600 text-sm">Invite Kiyo Bot to a new server</p>
            </a>
            <a href="https://github.com/KIO2gamer/project-kiyo" 
               class="block p-4 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors">
                <h3 class="font-semibold text-purple-800">Documentation</h3>
                <p class="text-purple-600 text-sm">View bot documentation and guides</p>
            </a>
            <a href="https://github.com/KIO2gamer/project-kiyo/issues" 
               class="block p-4 bg-yellow-100 rounded-lg hover:bg-yellow-200 transition-colors">
                <h3 class="font-semibold text-yellow-800">Support</h3>
                <p class="text-yellow-600 text-sm">Get help or report issues</p>
            </a>
        </div>
    </div>
</div> 